{% extends "_base.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% set dsc1NumberErrors %}
  {% if model.dsc1InvalidCharacterError %}
    <p>Deer Stalking Certificate 1 Number must only contain numbers</p>
  {% else %}
    <p>Deer Stalking Certificate 1 Number must be 5 characters or fewer</p>
  {% endif %}
{% endset -%}

{% set dsc1DateErrors %}
  {% if model.dsc1DayError %}
    <p>The date you obtained your Deer Stalking Certificate 1 must include a day</p>
  {% elif model.dsc1MonthError %}
    <p>The date you obtained your Deer Stalking Certificate 1 must include a month</p>
  {% elif model.dsc1YearError %}
    <p>The date you obtained your Deer Stalking Certificate 1 must include a year</p>
  {% elif model.dsc1FutureError %}
    <p>The date you obtained your Deer Stalking Certificate 1 must be in the past</p>
  {% else %}
    <p>The date you obtained your Deer Stalking Certificate 1 must be a real date</p>
  {% endif %}
{% endset -%}

{% block content %}

  {% if model.dsc1Error %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        {
            text: "Deer Stalking Certificate 1 Number must only contain numbers",
            href: "#qualification-reference-error"
        } if model.dsc1InvalidCharacterError,
        {
            text: "Deer Stalking Certificate 1 Number must be 5 characters or fewer",
            href: "#qualification-reference-error"
        } if model.dsc1LengthError,
        {
            text: "The date you obtained your Deer Stalking Certificate 1 must be a real date",
            href: "#qualification-date-error"
        } if model.dsc1InvalidError,
        {
            text: "The date you obtained your Deer Stalking Certificate 1 must be in the past",
            href: "#qualification-date-error"
        } if model.dsc1FutureError,
        {
            text: "The date you obtained your Deer Stalking Certificate 1 must include a day",
            href: "#qualification-date-error"
        } if model.dsc1DayError,
        {
            text: "The date you obtained your Deer Stalking Certificate 1 must include a month",
            href: "#qualification-date-error"
        } if model.dsc1MonthError,
        {
            text: "The date you obtained your Deer Stalking Certificate 1 must include a year",
            href: "#qualification-date-error"
        } if model.dsc1YearError,
        {
            text: "You must provide qualification details",
            href: "#qualification-reference-error"
        } if model.emptyPageError
      ]
    }) }}
  {% endif %}

  <h1 class="govuk-heading-xl">
    What are your Deer Stalking Certificate 1 details?
  </h1>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form method="post">
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
               {{ govukInput({
                  label: {
                    text: "Deer Stalking Certificate 1 Number",
                    classes: "govuk-label--m"
                  },
                  classes: "govuk-!-width-one-half",
                  id: "qualification-reference",
                  name: "dsc1Number",
                  value: model.qualificationRef,
                  errorMessage: {
                    html: dsc1NumberErrors
                  } if model.dsc1NumberError,
                  attributes: {
                    spellcheck: "false"
                  }
                }) }}
            </div>
          </div>
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
              {{ govukDateInput({
                id: "qualification-date",
                name: "dsc1Date",
                fieldset: {
                  legend: {
                    text: "Date Obtained",
                    classes: "govuk-fieldset__legend--m"
                  }
                },
                hint: {
                  text: "For example, 31 3 1980"
                },
                errorMessage: {
                    html: dsc1DateErrors
                } if model.dsc1DateError,
                items: [
                  {
                    name: "dsc1Day",
                    label: "Day",
                    value: model.qualificationDay,
                    classes: "govuk-input--width-2 govuk-input--error" 
                    if model.dsc1FutureError or
                    model.dsc1InvalidError or
                    model.dsc1DayError
                    else "govuk-input--width-2"
                  },
                  {
                    name: "dsc1Month",
                    label: "Month",
                    value: model.qualificationMonth,
                    classes: "govuk-input--width-2 govuk-input--error" 
                    if model.dsc1FutureError or
                    model.dsc1InvalidError or
                    model.dsc1MonthError
                    else "govuk-input--width-2"
                  },
                  {
                    name: "dsc1Year",
                    label: "Year",
                    value: model.qualificationYear, 
                       classes: "govuk-input--width-4 govuk-input--error" 
                    if model.dsc1FutureError or
                    model.dsc1InvalidError or
                    model.dsc1YearError
                    else "govuk-input--width-4"
                  }
                ]
              }) }}
            </div>
          </div>

          {{ govukButton({
          text: "Continue",
          classes: "naturescot-forward-button"
          }) }}
        </form>
    </div>
  </div>
{% endblock %}
